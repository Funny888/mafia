<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="model"
            type="com.example.mafia.viewmodels.SplashViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/splash_image"
            android:layout_width="@dimen/splash_image_size"
            android:layout_height="@dimen/splash_image_size"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/splash_image_margin_top"
            android:src="@drawable/image_for_splash" />

        <ProgressBar
            android:id="@+id/splash_progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginHorizontal="64dp"
            android:layout_marginTop="@dimen/splash_progress_margin_top"
            android:indeterminate="false"
            android:max="100"
            android:progress="@{model.getSplashModel.load}"
            android:progressDrawable="@drawable/progress" />

    </LinearLayout>
</layout>