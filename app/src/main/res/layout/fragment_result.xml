<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <TextView
            style="@style/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/result_title_margin_top"
            android:text="Статистика" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/acter"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_standart_top"
                android:layout_weight="1"
                android:text="Персонаж" />

            <TextView
                android:id="@+id/couts"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_standart_top"
                android:layout_weight="1"
                android:text="Кол-во раз" />

            <TextView
                android:id="@+id/count_time"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_standart_top"
                android:layout_weight="1"
                android:text="Время" />
        </LinearLayout>

        <GridView
            android:id="@+id/grid_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/gridview_margin_horizontal"
            android:layout_marginTop="@dimen/margin_standart_top"
            android:columnWidth="@dimen/gridview_column_width"
            android:gravity="center_horizontal"
            android:numColumns="3"
            android:stretchMode="spacingWidth"
            android:verticalSpacing="5dp">

        </GridView>

    </LinearLayout>

</layout>