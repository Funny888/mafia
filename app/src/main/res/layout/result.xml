<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">
    <include layout="@layout/toolbar"/>

    <TextView
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/result_title_margin_top"
        android:layout_gravity="center_horizontal"
        android:text="Статистика"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/acter"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_standart_top"
        android:text="Персонаж"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/couts"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_standart_top"
        android:text="Кол-во раз"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/count_time"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_standart_top"
        android:text="Время"
        android:layout_weight="1"/>
</LinearLayout>

<GridView
    android:id="@+id/grid_result"
    android:layout_marginTop="@dimen/margin_standart_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/gridview_margin_horizontal"
    android:verticalSpacing="5dp"
    android:columnWidth="@dimen/gridview_column_width"
    android:stretchMode="spacingWidth"
    android:gravity="center_horizontal"
    android:numColumns="3">

</GridView>

</LinearLayout>